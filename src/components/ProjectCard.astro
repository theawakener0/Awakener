---
import type { PinnedRepo } from '../lib/github';

interface Props {
  repo: PinnedRepo;
}

const { repo } = Astro.props;
---

<article class="project-card hover-lift">
  <a 
    href={repo.url} 
    target="_blank" 
    rel="noopener noreferrer"
    class="block p-5 sm:p-6 border border-subtle hover:border-white/30 transition-all duration-300"
  >
    <h3 class="font-mono text-base sm:text-lg text-white mb-2">
      {repo.name}
    </h3>
    
    <p class="font-mono text-sm text-secondary mb-4 line-clamp-2 leading-relaxed">
      {repo.description}
    </p>
    
    {repo.primaryLanguage && (
      <p class="font-mono text-xs text-secondary">
        {repo.primaryLanguage}
      </p>
    )}
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
